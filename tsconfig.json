{
  "compilerOptions": {
			"types": ["node"],
			"module": "commonjs",
			"resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
	  },
	  "typeRoots": [
		  "./node_modules/@types",
		  "./src/index.d.ts"
	  ]
  },
  "include": [
	  "src/**/*"
  ]
}
